<main class="p-12 mx-auto text-gray-800 max-w-7xl">
<%= form_with model: @user, url: sessions_path, class: "mt-6" do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email, placeholder: "Your email" %>
  <div class="pt-5">
    <%= f.submit "Login" %>
  </div>
<% end %>
<%= link_to "New user", new_users_registration_path %>
</main>